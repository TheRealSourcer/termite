---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import { getCollection } from "astro:content";
import GuidesList from "@/components/GuidesList.astro";
import { Image } from "astro:assets";

const studyGuides = await getCollection("studyGuidesCollection");
console.log(studyGuides);
---

<Layout title="Termite">
  <Main class="bg-amber-50">
	<section class="flex justify-center flex-col bg-[url('images/texture_paper.jpg')] bg-repeat bg-cover w-full pt-24 pb-12 px-96 max-sm:px-5 max-2xl:px-24">
		<div>
			<h1 class="font-extrabold text-7xl leading-20">Explore</h1>
			<p class="text-4xl text-slate-600 lh-">We have an awesome community ready to meet your varying studying needs.</p>
			<div class="pt-8">
				<a href="/explore" class="bg-white px-8 py-4 text-black rounded-lg font-bold hover:scale-105 hover:shadow-lg active:scale-90 active:shadow-none shadow-slate-600 duration-300">Create</a>
				<a href="/about" class="bg-transparent px-8 py-4 text-black rounded-lg font-bold border-2 border-black">Learn More</a>	
			</div>
		</div>

		<div>

		</div>
	</section>
	<section class="flex justify-center flex-col bg-[url('images/texture_paper.jpg')] bg-repeat bg-cover w-full pt-24 pb-12 px-96 max-sm:px-5 max-2xl:px-24">
		<GuidesList guides={studyGuides}/>
	</section>
  </Main>
</Layout>
