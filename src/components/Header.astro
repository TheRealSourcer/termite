---
import { Image } from "astro:assets";
import logo from "../assets/images/termite_logo.png"
---

<header class="flex justify-between items-baseline px-8 py-2 max-sm:px-5 bg-white w-full mx-auto flex-wrap z-10 sticky top-0 w-full">
    <a href="/" class="flex items-baseline min-w-fit">
        <Image src={logo} class="object-cover pr-2" alt="" width={40} height={40}>
        <p class="font-bold text-5xl font-[cursive] leading-tight">Termite</p>
    </a>
    
    <div class="flex bg-red-200 rounded-lg px-3 py-1 focus:outline-2 focus:outline-amber-700 has-[:focus]:bg-white has-[:focus]:outline-red-400 outline-2 outline-red-200 w-2/4 mx-8 order-1 max-sm:order-3 max-sm:w-full max-sm:mx-0">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="#055" class="size-7 pr-2 text-amber-800">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
          
        <input type="text" class="w-full focus:outline-0" placeholder="Search for study guides">
    </div>

    <ul class="flex gap-4 font-semibold order-2">
        <li><a href="/" class="text-teal-900">Home</a></li>
        <li><a href="/explore" class="text-teal-900">Explore</a></li>
        <li><a href="/about" class="text-teal-900">About</a></li>
        <li><a href="/contact" class="text-teal-900">Contact</a></li>
    </ul>
</header>